<li>
<div class="row"> 
    <div class="well col-md-6 ">
        <div class="col-md-3">

            <img src="<%= user.avatar.thumb.url %>" class="center-block img img-responsive" >
        </div>
        <div class="col-md-9">
            <p><strong><%= "#{user.fname} #{user.lname}" %></strong></p>
            <p> <a href=""><%= user.email %> </a></p>
            <p> <%= user.role %> </p>

            <%= link_to "Profile", user , class: "btn btn-primary" %>
            <% if current_user.admin? && !current_user?(user) %>
                <% if user.pending?  %>
                    <%= link_to "Accept", accept_user_path(user),
                        data: { confirm: "Are you sure you want to confirm this account ?" },
                        class: "btn btn-success" %>
                <% end %>
                <%= link_to "Delete", user, method: :delete,
                    data: { confirm: "You sure?" }, class: "btn btn-danger"  %>
            <% end %>
        </div>
    </div>
</div>
</li> 
