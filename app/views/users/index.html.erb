<% if @users.blank? %>
<p>There are not any users currently in the system.</p>
<% else %>
    <p>These are the current users in our system</p>
    <ul id="users">
        <% @users.each do |c| %>
            <li> 
               <%=  line = "#{c.fname} #{c.lname} #{c.email}" %> 
               
               <% if signed_in? %>
                   <% if current_user.email == c.email %>
                        <%= "Edit Profile (todo)" %>
                    <% end %>
                    <%= link_to "Profile" ,user_path(c) %>
               <% else %>
                  (not signed)
               <% end %>
        </li>
        <% end %>
    </ul>
<% end %>
<p> <%= link_to "Sign in", signin_path %> 
