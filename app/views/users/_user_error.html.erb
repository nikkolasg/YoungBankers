<% if @user.errors.any? %>
    <div id="user_error" >
    <div  class="alert alert-danger">
        The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
        <!-- add field_with_errors class -->
        <% @user.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>
