<%= form_for @user do |u| %>
    <%= u.label "First Name " %>
    <%= u.text_field :fname %>
    <br>
    <%= u.label "Last Name " %>
    <%= u.text_field :lname %>
    <br>
    <%= u.label "Email " %>
    <%= u.text_field :email %>
    <br>
    <%= u.label "Password " %>
    <%= u.password_field :password %>
    <br>
    <%= u.label "Password Confirmation " %>
    <%= u.password_field :password_confirmation %>
    <br>
    <%= u.radio_button :enrol ,1 %>
    <%= u.label "Individual" %>
    <br>
    <%= u.radio_button :enrol ,2 %>
    <%= u.label "Organizational" %>
    <br>

    <%= u.submit "Submit" %>
<% end %>

