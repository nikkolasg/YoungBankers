
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Contains brand (logo) + button to toggle if small screen size -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag("YBC_logo.gif", class: "logo_image"), root_path, class: "navbar-brand" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
            <%= form_for(:user, url: users_path, method:"get", html: { role:"search", class:"navbar-form navbar-right"}) do |f| %>
                <div class="form-group">
                    <%= text_field_tag( :query,"" , { placeholder:"Search", class:"form-control",style:"height:28px;"}) %>
                </div>
                <%= f.submit "Search" , {class:"btn btn-default", style:"display:none;padding-top:3px;padding-bottom:3px;"}  %>
            <% end %>

            <ul class="nav navbar-nav navbar-right">
                <li> <%= link_to "About", about_path %> </li>
                <li> <%= link_to "Services", services_path %> </li>
                <li> <%= link_to "Contact", contact_path %> </li>
                <li> <%= link_to "The Charter", charter_path %> </li>
                <% if signed_in? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Members <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li> <%= link_to "All Members", users_path %>
                            </li>
                            <li> <%= link_to "Profile", current_user %>
                            </li>
                            <li><a href="#">Messages</a>
                            </li>
                            <li> <%= link_to "Sign out", signout_path , method: "delete" %>
                            </li>
                </ul>
                </li>
            <% else %>
                <li class="dropdown" >
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Sign in <b class="caret"></b> </a>
                    <div class="dropdown-menu" >
                        <div class="navbar_login">
                    <%= form_for(:session, url: sessions_path ) do |f| %>
                        <div class="form-group">
                        <%= f.text_field :email ,  autofocus: true, placeholder:"Email" %>
                        <%= f.password_field :password,  placeholder: "Password" %>
                        </div>
                    <%= f.submit "Login", class:"btn btn-default" %>
                        </div>
                <% end %>
                </div>
     
                    </div>
                           <% end %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</div>


